{
  "name": "nodejs-boilerplate",
  "version": "0.0.4",
  "description": "Boilerplate for NodeJS project",
  "main": "app.ts",
  "scripts": {
    "serve": "cross-env NODE_ENV=dev nodemon --inspect dist/app.js",
    "serve:test": "cross-env NODE_ENV=staging node dist/app.js",
    "serve:prod": "cross-env NODE_ENV=prod node dist/app.js",
    "start": "yarn build && concurrently \"yarn build:watcher\" \"yarn serve\"",
    "start:test": "yarn build && yarn serve:test",
    "start:prod": "yarn build && yarn serve:prod",
    "build": "esbuild src/app.ts --platform=node --bundle --minify --outfile=dist/app.js",
    "build:watcher": "esbuild --watch src/app.ts --platform=node --bundle --minify --outfile=dist/app.js",
    "tsc": "tsc",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint . --ext .ts",
    "mongod:local": "mongod --dbpath=/home/doubledot2/Desktop/APF/data/db"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/liew-dd/nodejs-boilerplate.git"
  },
  "author": "Double Dot PLT",
  "license": "ISC",
  "bugs": {
    "url": "https://gitlab.com/liew-dd/nodejs-boilerplate/issues"
  },
  "homepage": "https://gitlab.com/liew-dd/nodejs-boilerplate#readme",
  "dependencies": {
    "apisauce": "^2.1.5",
    "bcrypt": "^5.0.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.2",
    "dayjs-plugin-utc": "^0.1.2",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.3.0",
    "express-validation": "^3.0.8",
    "helmet": "^5.0.2",
    "http-status": "^1.5.2",
    "i": "^0.3.7",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "mongodb": "^4.5.0",
    "mongoose": "^6.3.2",
    "multer": "^1.4.4",
    "package.json": "^2.0.1",
    "source-map-support": "^0.5.21"
  },
  "_moduleAliases": {
    "~config": "dist/config",
    "~middlewares": "dist/middlewares",
    "~routes": "dist/routes",
    "~controllers": "dist/controllers",
    "~models": "dist/models",
    "~services": "dist/services",
    "~entities": "dist/entities",
    "~lib": "dist/lib",
    "~api": "dist/api"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/eslint": "^8.4.1",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/multer": "^1.4.7",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "concurrently": "^7.0.0",
    "esbuild": "^0.14.25",
    "eslint": "^8.15.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-security": "^1.4.0",
    "nodemon": "^2.0.15",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5"
  }
}